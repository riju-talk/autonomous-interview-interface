# ======================
# Application Settings
# ======================
NODE_ENV=development
TZ=UTC

# ======================
# Web Application
# ======================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME="Autonomous Interview Interface"
VITE_APP_DESCRIPTION="AI-Powered Interview Platform"
VITE_APP_VERSION=0.1.0

# ======================
# API Server
# ======================
# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# ======================
# Database (PostgreSQL)
# ======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_ai
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ======================
# Redis
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-change-me
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ======================
# Vector Database (ChromaDB)
# ======================
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_HTTP_PORT=8000

# ======================
# LLM Configuration
# ======================
# OpenAI (example)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Or Anthropic
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL=claude-2

# ======================
# Monitoring & Analytics
# ======================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ======================
# Email Configuration
# ======================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# ======================
# Feature Flags
# ======================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false
CHROMA_PORT=8000
CHROMA_ADMIN_PASSWORD=admin
CHROMA_SERVER=http://${CHROMA_HOST}:${CHROMA_PORT}

# JWT Authentication
JWT_SECRET=your-jwt-secret-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# OAuth Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# LLM Configuration
GROQ_API_KEY=your-groq-api-key
LLM_MODEL=mixtral-8x7b-32768
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# PgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_PREFIX=/api/v1
