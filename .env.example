# ======================
# Application Configuration
# ======================
NODE_ENV=development
TZ=UTC
APP_NAME="Autonomous Interview Interface"
APP_VERSION=1.0.0

# ======================
# Web Application (Frontend)
# ======================
# Frontend runs on port 3000 in development, 80 in production
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_NAME="${APP_NAME}"
VITE_APP_DESCRIPTION="AI-Powered Interview Platform"
VITE_APP_VERSION=${APP_VERSION}

# ======================
# API Server (Backend)
# ======================
# API runs on port 8000
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_LOG_LEVEL=info
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ======================
# PostgreSQL Database
# ======================
# Default port: 5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=interview_ai
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ======================
# Redis Cache
# ======================
# Default port: 6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ======================
# ChromaDB Vector Store
# ======================
# ChromaDB runs on port 8000 inside container, mapped to 8001 on host
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_HTTP_PORT=8000
CHROMA_ADMIN_PASSWORD=admin
CHROMA_SERVER=http://${CHROMA_HOST}:${CHROMA_PORT}

# ======================
# LLM Configuration (Groq)
# ======================
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama3-70b-8192
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1024

# ======================
# Authentication
# ======================
JWT_SECRET=your-jwt-secret-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# OAuth Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# ======================
# File Uploads
# ======================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv

# ======================
# Monitoring & Analytics
# ======================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# ======================
# Email Configuration
# ======================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# ======================
# Feature Flags
# ======================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false

# ======================
# PgAdmin (Database Admin)
# ======================
# Accessible on port 5050 in development
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# ======================
# Application URLs
# ======================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_PREFIX=/api/v1
